
<header class="site-header container-fluid py-1 {{ fn.is_front_page() ? 'site-header-home' : '' }}">
  <div class="d-flex d-md-none pt-4 justify-content-between">
    <div class="pr-1 py-3">
      {% include 'parts/header_nav_item.twig' with { headerNavItem: primaryMenu[0], headerNavItemClasses: 'site-title' } %}
    </div>
    <div class="pl-1 text-right">
      <div class="hamburger hamburger--collapse toggle-navigation" tabindex="0"
     aria-label="Menu" role="button" aria-controls="collapseExample">
        <div class="hamburger-box">
          <div class="hamburger-inner"></div>
        </div>
      </div>
    </div>
  </div>
  <nav class="site-nav row">
    <div class="site-nav-row d-none d-md-flex">
      <div class="site-nav-col sep-after">
        {% include 'parts/header_nav_item.twig' with { headerNavItem: primaryMenu[0], headerNavItemClasses: 'site-title' } %}
      </div>
      <div class="site-nav-col text-right sep-before">
        {% include 'parts/header_nav_item.twig' with { headerNavItem: primaryMenu[1] } %}
      </div>
    </div>
    <div class="site-nav-row">
      <div class="site-nav-col sep-after">
        {% include 'parts/header_nav_item.twig' with { headerNavItem: primaryMenu[2] } %}
      </div>
      {# <div class="site-nav-col text-center sep-after sep-before">
        {% include 'parts/header_nav_item.twig' with { headerNavItem: primaryMenu[3] } %}
      </div> #}
      <div class="site-nav-col text-right sep-before">
        {% include 'parts/header_nav_item.twig' with { headerNavItem: primaryMenu[4] } %}
      </div>
    </div>
    <div class="site-nav-row">
      <div class="site-nav-col sep-after">
        {% include 'parts/header_nav_item.twig' with { headerNavItem: primaryMenu[5] } %}
      </div>
      <div class="site-nav-col text-center sep-before sep-after">
        {% include 'parts/header_nav_item.twig' with { headerNavItem: primaryMenu[6] } %}
      </div>
      <div class="site-nav-col sep-before">
        <div class="nav-item-group">
          {% if fn.get_option('th_option_social_facebook') %}
            <a 
              class="nav-item" 
              target="_blank" 
              href="{{ fn.get_option('th_option_social_facebook') }}">
              Facebook
            </a>
          {% endif %}
          {% if fn.get_option('th_option_social_instagram') %}
            <a 
              class="nav-item" 
              target="_blank" 
              href="{{ fn.get_option('th_option_social_instagram') }}">
              Instagram
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </nav>
</header>

  